  <body dir="rtl" id="body">
    <%- include('./components/header.ejs') %>

    <section class="MainSec tall" id="MainSec">
      <h1 class="MainTitle">التقارير</h1>

      
        <table class="table center hide-when-mobile2" id="table">
          <tr>
            <th>م</th>
            <th>البيان</th>
            <th>زكاة المال</th>
            <th>صدقة جارية</th>
            <th>علاج مرضي</th>
            <th>ذبح و توزيع لحوم</th>
